                                            <div class="card-icon">‚ö†Ô∏è</div>
                                            <div class="card-info">
                                                <h3>Estoque Baixo</h3>
                                                <p id="low-stock-products" class="card-value">0</p>
                                            </div>
                                        </div>
                                        <div class="dashboard-card danger">
                                            <div class="card-icon">üö´</div>
                                            <div class="card-info">
                                                <h3>Sem Estoque</h3>
                                                <p id="out-of-stock-products" class="card-value">0</p>
                                            </div>
                                        </div>
                                        <div class="dashboard-card">
                                            <div class="card-icon">üìà</div>
                                            <div class="card-info">
                                                <h3>Total de Vendas</h3>
                                                <p id="total-sales-count" class="card-value">0</p>
                                            </div>
                                        </div>
                                        <div class="dashboard-card success">
                                            <div class="card-icon">üíµ</div>
                                            <div class="card-info">
                                                <h3>Valor Total</h3>
                                                <p id="total-sales-amount" class="card-value">R$ 0,00</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Caixa Tab -->
                                <div id="caixa-tab" class="tab-content">
                                    <h2>üí∞ Caixa - PDV</h2>
                                    <div class="caixa-container">
                                        <div class="caixa-left">
                                            <div class="barcode-scanner">

                                                    <th>Estoque</th>
                                                    <th>A√ß√µes</th>
                                                </tr>
                                            </thead>
                                            <tbody id="products-table-body"></tbody>
                                        </table>
                                    </div>
                                </div>

                                <!-- Sales Tab -->
                                <div id="sales-tab" class="tab-content">
                                    <h2>üìà Hist√≥rico de Vendas</h2>
                                    <div class="table-container">
                                        <table class="data-table">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Data</th>
                                                    <th>Itens</th>
                                                    <th>Pagamento</th>
                                                    <th>Total</th>
                                                </tr>
